  WEDDING
  ENGAGEMENT
  ANNIVERSARY
  BABY_SHOWER
  GRADUATION
  VALENTINES
  MOTHERS_DAY
  FATHERS_DAY
  HOLIDAY
  NEW_YEARS
  THANK_YOU
  JUST_BECAUSE
  SYMPATHY
  CONGRATULATIONS
  PROMOTION
}

enum CardTier {
  QUICK
  PREMIUM
}

enum QuickTheme {
  AURORA_DREAMS
  DEEP_BIOLUMINESCENCE
  FIREFLY_MEADOW
  LANTERN_FESTIVAL
  MIDNIGHT_RAIN
  SAKURA_WIND
  FIRST_DANCE
  CHAMPAGNE_TOAST
  RINGS_OF_LIGHT
}

